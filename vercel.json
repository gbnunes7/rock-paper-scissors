{
    "version": 2,
    "builds": [
      {
        "src": "src/**/*",
        "use": "@vercel/static"
      },
      { 
        "src": "src/output.css", 
        "use": "@vercel/static" },
      {
        "src": "assets/**/*",
        "use": "@vercel/static"
      },
      {
        "src": "components/**/*",
        "use": "@vercel/static"
      }
    ],
    "routes": [
      { "src": "/", "dest": "/src/index.html" },
      { "src": "/assets/(.*)", "dest": "/assets/$1" },
      { "src": "/output.css", "dest": "/src/output.css" },
      { "src": "/components/(.*)", "dest": "/components/$1" }
    ]
  }